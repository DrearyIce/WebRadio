<UserControl
    x:Class="WpfApp1.Controls.ControlBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisEx="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="70"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Button
                    Margin="10,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Grid Width="56" Height="56">
                        <TextBlock
                            x:Name="nofavicon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SFPro}"
                            FontSize="36"
                            Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                            Opacity="0.2"
                            Text="􀑈" />
                        <Image x:Name="favicon" Stretch="UniformToFill" />
                    </Grid>
                </Button>
                <StackPanel Margin="76,12,8,12" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="maintitle"
                        FontFamily="{StaticResource NewYork}"
                        FontSize="20"
                        Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                        Text=""
                        TextTrimming="CharacterEllipsis" />
                    <Button
                        x:Name="copyurl"
                        Padding="0,2"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="copyurl_Click"
                        Opacity="0.7"
                        ToolTip="Click to copy">
                        <TextBlock
                            x:Name="subtitle"
                            Text=""
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap" />
                    </Button>
                </StackPanel>
            </Grid>
            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="shareQR"
                    Width="44"
                    Height="44"
                    adonisEx:CornerRadiusExtension.CornerRadius="22"
                    Click="shareQR_Click"
                    Content="􀖂"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="18" />
                <Border Width="4" />
                <Button
                    x:Name="pin"
                    Width="44"
                    Height="44"
                    adonisEx:CornerRadiusExtension.CornerRadius="22"
                    Click="pin_Click"
                    Content="􀎦"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="18" />
                <Border Width="4" />
                <Button
                    x:Name="addtolist"
                    Width="44"
                    Height="44"
                    adonisEx:CornerRadiusExtension.CornerRadius="22"
                    Click="addtolist_Click"
                    Content="􀏱"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="18" />
                <Border Width="4" />
                <Button
                    x:Name="btn_Play"
                    Width="56"
                    Height="56"
                    adonisEx:CornerRadiusExtension.CornerRadius="28"
                    Click="btn_Play_Click"
                    Content="􀊄"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="24"
                    Visibility="Visible" />
                <Button
                    x:Name="btn_Pause"
                    Width="56"
                    Height="56"
                    adonisEx:CornerRadiusExtension.CornerRadius="28"
                    Click="btn_Pause_Click"
                    Content="􀊆"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="24"
                    Visibility="Collapsed" />
                <Button
                    x:Name="btn_Loading"
                    Width="56"
                    Height="56"
                    adonisEx:CornerRadiusExtension.CornerRadius="28"
                    Click="btn_Pause_Click"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="24"
                    Visibility="Collapsed">
                    <ContentControl
                        Grid.Row="4"
                        Grid.Column="0"
                        Width="32"
                        Height="24"
                        ContentTemplate="{DynamicResource {x:Static adonisUi:Templates.LoadingDots}}"
                        Focusable="False"
                        Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" />
                </Button>
                <Border Width="4" />
                <Button
                    x:Name="volume"
                    Width="44"
                    Height="44"
                    adonisEx:CornerRadiusExtension.CornerRadius="22"
                    Click="volume_Click"
                    Content="􀊩"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="18" />
                <Border Width="4" />
                <Button
                    x:Name="more"
                    Width="44"
                    Height="44"
                    adonisEx:CornerRadiusExtension.CornerRadius="22"
                    Click="more_Click"
                    Content="􀍠"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="18" />

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
