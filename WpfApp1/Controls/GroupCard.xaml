<UserControl
    x:Class="WpfApp1.Controls.GroupCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WpfApp1.Models"
    Height="36"
    MinWidth="320"
    d:Width="400"
    mc:Ignorable="d">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            BorderThickness="0,1"
            Click="Button_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SFPro}"
                    FontSize="14"
                    Text="􀈕" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SFPro}"
                    Text="{Binding GroupName, RelativeSource={RelativeSource AncestorType=local:GroupCard}}"
                    TextTrimming="CharacterEllipsis" />
            </Grid>
        </Button>
        <StackPanel
            x:Name="editPanel"
            Grid.Column="1"
            d:Visibility="Visible"
            Orientation="Horizontal"
            TextBlock.FontFamily="{StaticResource SFPro}"
            Visibility="Collapsed">
            <Button
                x:Name="delbtn"
                Background="{DynamicResource {x:Static adonisUi:Brushes.ErrorBrush}}"
                BorderThickness="0"
                Click="delbtn_Click"
                Content="􀈑   Delete" />
            <Button
                x:Name="editbtn"
                Background="{DynamicResource {x:Static adonisUi:Brushes.AccentBrush}}"
                BorderThickness="0"
                Click="editbtn_Click"
                Content="􀈏   Edit Name" />
        </StackPanel>
    </Grid>
</UserControl>
