<UserControl
    x:Class="WpfApp1.Controls.NavItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Width="32"
            Padding="6,3"
            HorizontalAlignment="Center"
            FontFamily="{StaticResource SFPro}"
            FontSize="15"
            Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:NavItem}}" />
        <TextBlock
            Grid.Column="1"
            Margin="5,0"
            VerticalAlignment="Center"
            FontFamily="{StaticResource NewYork}"
            FontSize="14"
            FontWeight="Bold"
            Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:NavItem}}" />
    </Grid>
</UserControl>
