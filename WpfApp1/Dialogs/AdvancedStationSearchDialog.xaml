<models:CustomDialog
    x:Class="WpfApp1.Dialogs.AdvancedStationSearchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WpfApp1.Models"
    mc:Ignorable="d">
    <Grid d:Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
        <StackPanel>
            <TextBlock
                Margin="10"
                FontSize="20"
                Text="Set Filter" />
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Name" />
                <TextBox x:Name="_name" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="_ename"
                    Grid.Column="1"
                    Content="Exact Name" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Country" />
                <TextBox x:Name="_country" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="_ecountry"
                    Grid.Column="1"
                    Content="Exact Country" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Country Code" />
                <TextBox x:Name="_countrycode" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="State" />
                <TextBox x:Name="_state" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="_estate"
                    Grid.Column="1"
                    Content="Exact State" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Language" />
                <TextBox x:Name="_lang" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="_elang"
                    Grid.Column="1"
                    Content="Exact Language" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Tag" />
                <TextBox x:Name="_tag" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    x:Name="_etag"
                    Grid.Column="1"
                    Content="Exact Tag" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Tags" />
                <TextBox x:Name="_tags" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Codec" />
                <TextBox x:Name="_codec" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="MinBitrate (int)" />
                <TextBox x:Name="_minbit" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="MaxBitrate (int)" />
                <TextBox x:Name="_maxbit" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Reverse" />
                <CheckBox x:Name="_reverse" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Reverse (int)" />
                <TextBox x:Name="_offset" Grid.Column="1" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="Limit (int)" />
                <TextBox
                    x:Name="_limit"
                    Grid.Column="1"
                    Text="10" />
            </Grid>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,4"
                    VerticalAlignment="Center"
                    Text="HideBroken" />
                <CheckBox x:Name="_hidebroken" Grid.Column="1" />
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="okbtn"
                    Grid.Column="2"
                    Padding="8,6"
                    Click="okbtn_Click"
                    Content="OK"
                    Cursor="Hand" />
                <Button
                    x:Name="clear"
                    Grid.Column="0"
                    Padding="8,6"
                    Click="clear_Click"
                    Content="Clear"
                    Cursor="Hand" />
            </Grid>
        </StackPanel>
    </Grid>
</models:CustomDialog>
