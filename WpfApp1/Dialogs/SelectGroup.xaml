<models:CustomDialog
    x:Class="WpfApp1.Dialogs.SelectGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WpfApp1.Controls"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WpfApp1.Models"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer d:Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
            <StackPanel>
                <TextBlock
                    Margin="10"
                    FontSize="20"
                    Text="Select Group" />
                <StackPanel x:Name="groups" />
                <Button
                    x:Name="okbtn"
                    Grid.Column="2"
                    Margin="0,10,0,0"
                    Padding="8,6"
                    Click="okbtn_Click"
                    Content="Cancel"
                    Cursor="Hand" />
            </StackPanel>
        </ScrollViewer>
        <Controls:DialogPlacement x:Name="dialogPlace" d:IsHidden="True" />
    </Grid>
</models:CustomDialog>
