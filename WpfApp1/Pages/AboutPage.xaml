<Page
    x:Class="WpfApp1.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AboutPage"
    TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
    mc:Ignorable="d">

    <Grid>
        <ContentControl
            Width="600"
            Height="600"
            Margin="0,0,-64,-136"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            ContentTemplate="{DynamicResource {x:Static adonisUi:Icons.AdonisUIGrayscale}}"
            Foreground="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}"
            Opacity="0.4" />
        <ScrollViewer RenderTransformOrigin="0.5,0">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <StackPanel>
                <StackPanel
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="128"
                        Height="128"
                        Source="/res/img/WebRadio.png" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource NewYork}"
                            FontSize="50"
                            Text="Web Radio" />
                        <Button
                            x:Name="WRbtn"
                            HorizontalAlignment="Center"
                            Click="WRbtn_Click"
                            Content="Github" />
                    </StackPanel>
                </StackPanel>
                <TextBlock
                    Margin="12,0,0,0"
                    FontFamily="{StaticResource NewYork}"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                    Text="UI" />
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <ContentControl
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        ContentTemplate="{DynamicResource {x:Static adonisUi:Icons.AdonisUI}}" />
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SFPro}"
                                FontSize="30"
                                Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                                Text="Adonis " />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SFPro}"
                                FontSize="30"
                                Foreground="{DynamicResource {x:Static adonisUi:Brushes.ErrorBrush}}"
                                Text="UI" />
                        </StackPanel>
                        <Button
                            x:Name="AUIbtn"
                            HorizontalAlignment="Center"
                            Click="AUIbtn_Click"
                            Content="Github" />
                    </StackPanel>
                </StackPanel>
                <TextBlock
                    Margin="12,0,0,0"
                    FontFamily="{StaticResource NewYork}"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                    Text="Credits" />
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        Source="/res/img/RBW.png" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SFPro}"
                            FontSize="30"
                            Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                            Text="Radio Browser Wrapper" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="RBWbtnGithub"
                                Click="RBWbtnGithub_Click"
                                Content="Github" />
                            <Border Width="8" />
                            <Button
                                x:Name="RBWbtnWeb"
                                Click="RBWbtnWeb_Click"
                                Content="Website" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SFPro}"
                            FontSize="30"
                            Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
                            Text="OnlineRadio.Core" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="ORCbtn"
                                Click="ORCbtn_Click"
                                Content="Github" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
