<Page
    x:Class="WpfApp1.Pages.ImportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WpfApp1.Controls"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ImportPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <ScrollViewer RenderTransformOrigin="0.5,0">
                <ScrollViewer.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </ScrollViewer.RenderTransform>
                <StackPanel>
                    <Border
                        Width="400"
                        Height="180"
                        Margin="20"
                        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}"
                        BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer3BorderBrush}}"
                        BorderThickness="2">
                        <StackPanel VerticalAlignment="Center">
                            <Controls:RadioCard x:Name="precard" Width="350" />
                        </StackPanel>
                    </Border>
                    <Grid Margin="60,20" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Name" />
                        <TextBox x:Name="name" Grid.Column="2" />
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="URL" />
                        <TextBox
                            x:Name="url"
                            Grid.Row="1"
                            Grid.Column="2" />
                        <TextBlock
                            Grid.Row="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Icon" />
                        <TextBox
                            x:Name="favicon"
                            Grid.Row="2"
                            Grid.Column="2" />
                        <TextBlock
                            Grid.Row="3"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Tag" />
                        <TextBox
                            x:Name="tags"
                            Grid.Row="3"
                            Grid.Column="2" />
                    </Grid>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            x:Name="save"
                            Padding="16,10"
                            Click="save_Click"
                            Content="Save" />
                        <Border Width="8" />
                        <Button
                            x:Name="prebtn"
                            Padding="16,10"
                            Click="prebtn_Click"
                            Content="Preview" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</Page>
