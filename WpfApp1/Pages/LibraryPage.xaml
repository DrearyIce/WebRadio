<Page
    x:Class="WpfApp1.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WpfApp1.Controls"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LibraryPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
        <ScrollViewer x:Name="discoverPanel" Margin="0,0,0,0">
            <StackPanel>
                <StackPanel>
                    <Grid>
                        <TextBlock
                            Margin="12,0,0,0"
                            FontFamily="{StaticResource NewYork}"
                            FontSize="24"
                            Text="Groups" />
                        <StackPanel
                            Margin="0,0,12,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="editgroups"
                                VerticalAlignment="Center"
                                Click="editgroups_Click"
                                Content="􀈊   Edit"
                                FontFamily="{StaticResource SFPro}" />
                        </StackPanel>
                    </Grid>
                    <StackPanel x:Name="groups" Margin="10" />
                </StackPanel>
                <Border
                    Height="2"
                    Margin="10,4,10,8"
                    BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}"
                    BorderThickness="2" />
                <Grid>
                    <TextBlock
                        Margin="12,0,0,0"
                        FontFamily="{StaticResource NewYork}"
                        FontSize="24"
                        Text="Recently" />
                </Grid>
                <Controls:WrapGrid x:Name="recent" Margin="10" />
                <TextBlock
                    x:Name="Loadmore"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Cursor="Hand"
                    Foreground="{DynamicResource {x:Static adonisUi:Brushes.HyperlinkBrush}}"
                    MouseUp="Loadmore_MouseUp"
                    Text="Load more" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
