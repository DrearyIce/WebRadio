<Page
    x:Class="WpfApp1.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer RenderTransformOrigin="0.5,0">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <StackPanel>
                <Grid>
                    <TextBlock
                        Margin="12,0,0,0"
                        FontFamily="{StaticResource NewYork}"
                        FontSize="24"
                        Text="Appearance" />
                </Grid>
                <StackPanel x:Name="rbsp" Margin="0,10,0,10">
                    <RadioButton
                        Margin="10,4"
                        Checked="RadioButton_Checked"
                        Content="Light" />
                    <RadioButton
                        Margin="10,4"
                        Checked="RadioButton_Checked"
                        Content="Dark" />
                    <RadioButton
                        Margin="10,4"
                        Checked="RadioButton_Checked"
                        Content="System" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
